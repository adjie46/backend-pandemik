<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <button type="button" class="btn btn-success waves-effect waves-light" data-toggle="modal"
                data-target="#addMahasiswa">
                <i class="uil uil-plus mr-2"></i> Tambah Data
            </button>
            <div class="page-title-left">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="#">{{pagePrevius}}</a></li>
                    <li class="breadcrumb-item active">{{pageActive}}</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive">
                <h4 class="card-title">Data Jurusan</h4>
                <table id="datatable" class="mt-10 table dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>NIM</th>
                            <th>NAMA</th>
                            <th>JURUSAN</th>
                            <th>EMAIL</th>
                            <th>PHONE</th>
                            <th>AKSI</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each dataResponse}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{nim_mahasiswa}}</td>
                            <td>{{nama_mahasiswa}}</td>
                            <td>{{jurusan.jurusan_name}}</td>
                            <td>{{email_mahasiswa}}</td>
                            <td>{{phone_mahasiswa}}</td>
                            {{!-- <td>{{jurusan_status}}</td> --}}
                            <td width="20%">
                                <div class="button-items" role="group" aria-label="Basic example">
                                    <button type="button" id="btnEditJurusan"
                                        class="btn btn-success waves-effect waves-light" data-toggle="modal"
                                        data-target="#editJurusan" data-jurusan-name="{{jurusan_name}}"
                                        data-jurusan-id="{{jurusan_id}}">
                                        <i class="uil uil-edit mr-2"></i> Edit
                                    </button>
                                    <button type="button" id="btnHapusJurusan"
                                        class="btn btn-danger waves-effect waves-light"
                                        data-jurusan-id="{{jurusan_id}}">
                                        <i class="uil uil-trash mr-2"></i> Hapus
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>

            </div>
            <!-- end card-body -->
        </div>
        <!-- end card -->
    </div> <!-- end col -->
</div> <!-- end row -->

<div class="modal fade" id="addMahasiswa" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Tambah Mahasiswa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addMahasiswaFrm" class="needs-validation" novalidate>
                    <div class="form-group">
                        <label for="nim">NIM</label>
                        <input type="text" maxlength="15"
                            oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');"
                            data-parsley-type="digits" class="form-control" autofocus name="nim" id="nim"
                            placeholder="Nomor Induk Mahasiswa" required>
                    </div>
                    <div class="form-group">
                        <label for="nama_mahasiswa">NAMA MAHASISWA</label>
                        <input type="text" class="form-control" autofocus name="nama_mahasiswa" id="nama_mahasiswa"
                            placeholder="Nama Mahasiswa" required />
                    </div>
                    <div class="form-group">
                        <label for="jurusan">JURUSAN</label>
                        <select class="form-control">
                            <option value="" disabled selected>Select</option>
                            {{#each dataJurusan}}
                                <option value="{{jurusan_id}}">{{jurusan_name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="email_mahasiswa">EMAIL MAHASISWA</label>
                        <input type="email" class="form-control" autofocus name="email_mahasiswa" id="email_mahasiswa"
                            placeholder="Email Mahasiswa" required />
                    </div>
                    <div class="form-group">
                        <label for="telpon_mahasiswa">TELEPON MAHASISWA</label>
                        <input maxlength="13"
                            oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');"
                            data-parsley-type="digits" type="tel" class="form-control" autofocus name="telpon_mahasiswa" id="telpon_mahasiswa"
                            placeholder="Telepon Mahasiswa" required />
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Batal</button>
                <button type="submit" class="btn btn-primary">Tambah Mahasiswa</button>
            </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editJurusan" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Edit Jurusan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="editJurusanFrm" class="needs-validation" novalidate>
                    <div class="form-group">
                        <label for="username">Nama Jurusan</label>
                        <input type="text" class="form-control" autofocus name="edit_jurusan_name"
                            id="edit_jurusan_name" placeholder="Enter username" required>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Batal</button>
                <button type="submit" class="btn btn-primary">Update Data</button>
            </div>
            </form>
        </div>
    </div>
</div>